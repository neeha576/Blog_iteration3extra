<%= div_for comment do %>
<%= content_tag :div, class: "comments" do -%>
<%= content_tag :div, class: "comments-outer" do -%>
  <p><strong>Posted <%=time_ago_in_words(comment.created_at)%> ago</strong></p>
<% end %>
<%= content_tag :div, class: "comments-div1" do -%>
<%= h(comment.body) %>
<% end %>
<%= content_tag :div, class: "comments-div2" do -%>
<%= link_to 'Edit', edit_post_comment_path(comment.post, comment) %> |
<%= link_to 'Destroy', [comment.post, comment], method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
<%end %>
<% end %>
